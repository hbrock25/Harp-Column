!!!5
%head{:profile => 'http://gmpg.org/xfn/11'}
  %title Harp Column : Kenneth Keiter
  %link{:charset => "utf-8", :href => "/styles/reset.css", :rel => "stylesheet", :type => "text/css"}/
  %link{:charset => "utf-8", :href => "/styles/960_24.css", :rel => "stylesheet", :type => "text/css"}/
  %link{:charset => "utf-8", :href => "/master.css", :rel => "stylesheet", :type => "text/css"}/
  %script{:charset => "utf-8", :src => "/scripts/jq.js", :type => "text/javascript"}
  %script{:charset => "utf-8", :src => "/scripts/text.js", :type => "text/javascript"}
  %script{:src => "http://use.typekit.com/rrf2fwu.js", :type => "text/javascript"}
  :javascript
    try{
      Typekit.load({
        active: function(){
          $('.text-extents').textExtents();
        }
      });
    }catch(e){};
    $(document).ready(function(){
      $('textarea.auto-expand').autoResize({
        onResize : function() { $(this).css({opacity:0.8}); },
        animateCallback : function() { $(this).css({opacity:1}); },
        animateDuration : 200,
        extraSpace : 0
      });
    });
%body
  
  -# Top banner ad
  %section.ad.constrain#advert-top
    %img.content{:src => 'http://placehold.it/840x100&text=840x100 Advertisement', :alt => 'sponsor-banner'}
  
  -# Standard site-wide header
  %header#header-primary.standard
    .content.container_24
      %h1.grid_4
        %a{:href => '/', :title => 'Return to your Music Stand'} Harp Column
      %nav#nav-primary.link-em.grid_12.push_1
        %ul
          %li.selected
            %a{:href => '#'} Home
          %li
            %a{:href => '#'} My Music Stand
          %li
            %a{:href => '#'} Blog
          %li
            %a{:href => '#'} Events
          %li
            %a{:href => '#'} Classifieds
          %li
            %a{:href => '#'} Magazine
      %span#utilities.grid_7.push_1
        %form#query-site{:method => 'GET', :action => ''}
          %input{:type => 'text'}
        %a.session-dropdown{:href=>'#'} Some

  = yield
    



