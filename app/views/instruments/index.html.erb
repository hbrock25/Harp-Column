<h1>Listing instruments</h1>

<table>
  <tr>
    <th>Model</th>
    <th>Manufacturer</th>
    <th>Purchase date</th>
    <th>Color</th>
    <th>Serial</th>
    <th>Prev owner</th>
    <th>Description</th>
    <th>Finish</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @instruments.each do |instrument| %>
  <tr>
    <td><%= instrument.model %></td>
    <td><%= instrument.manufacturer_id %></td>
    <td><%= instrument.purchase_date %></td>
    <td><%= instrument.color %></td>
    <td><%= instrument.serial %></td>
    <td><%= instrument.prev_owner %></td>
    <td><%= instrument.description %></td>
    <td><%= instrument.finish %></td>
    <td><%= link_to 'Show', instrument %></td>
    <td><%= link_to 'Edit', edit_instrument_path(instrument) %></td>
    <td><%= link_to 'Destroy', instrument, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

