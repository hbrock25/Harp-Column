<h1>Listing pieces</h1>

<table>
  <tr>
    <th>Composer</th>
    <th>Date composed</th>
    <th>Description</th>
    <th>Comments</th>
    <th>Difficulty</th>
    <th>Difficulty rating</th>
    <th>Submitted user</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pieces.each do |piece| %>
  <tr>
    <td><%= piece.composer_id %></td>
    <td><%= piece.date_composed %></td>
    <td><%= piece.description %></td>
    <td><%= piece.comments %></td>
    <td><%= piece.difficulty_id %></td>
    <td><%= piece.difficulty_rating %></td>
    <td><%= piece.submitted_user_id %></td>
    <td><%= link_to 'Show', piece %></td>
    <td><%= link_to 'Edit', edit_piece_path(piece) %></td>
    <td><%= link_to 'Destroy', piece, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

